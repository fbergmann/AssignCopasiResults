@model System.Web.Mvc.HandleErrorInfo

@{

    Layout = "_Layout.cshtml";
    ViewBag.Title = "Error";

    var message = ViewBag.Message;
    var detailedMessage = ViewBag.DetailedMessage;
    var url = ViewBag.Url;
    var caption = ViewBag.Caption;
    if (string.IsNullOrWhiteSpace(caption) && !string.IsNullOrWhiteSpace(url))
    {
        caption = "Click here to continue.";
    }


}

<hgroup class="title">
    <h1 class="error">Error.</h1>
    <h2 class="error">An error occurred while processing your request.</h2>
</hgroup>

    @if (!string.IsNullOrWhiteSpace(message))
    {
        <p>@message</p>
    }
    @if (!string.IsNullOrWhiteSpace(detailedMessage))
    {
        <p>@detailedMessage</p>
    }
    @if (!string.IsNullOrWhiteSpace(message))
    {
        <p>@message</p>
    }
    @if (!string.IsNullOrWhiteSpace(url))
    {
        <a href="@url">@caption</a>
    }